@model OptMailWeb.Models.LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f5f7fa;
            display: flex;
            justify-content: center;
            align-items: center; /* Dikey + yatay tam ortalama */
            height: 100vh;
            margin: 0;
        }

        .login-card {
            width: 850px;
            max-width: 95%;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 6px 25px rgba(0,0,0,0.2);
            min-height: 480px;
            display: flex;
            flex-direction: row;
        }

        .login-left {
            background: url('/images/login-bg.jpg') center center no-repeat;
            background-size: cover;
            flex: 1;
        }

        .login-right {
            flex: 1;
            padding: 60px 50px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

            .login-right h3 {
                font-size: 2rem;
                font-weight: 600;
                margin-bottom: 30px;
                text-align: center;
            }
    </style>
</head>
<body>
    <div class="card login-card">
        <!-- Sol kısım (fotoğraf) -->
        <div class="login-left d-none d-md-block"></div>

        <!-- Sağ kısım (form) -->
        <div class="login-right">
            <h3>Giriş Yap</h3>
            <form asp-action="Login" method="post">
                <div class="mb-4">
                    <label asp-for="KullaniciKodu" class="form-label">Kullanıcı Kodu</label>
                    <input asp-for="KullaniciKodu" class="form-control form-control-lg" placeholder="Kullanıcı kodunu giriniz" />
                </div>
                <div class="mb-4">
                    <label asp-for="PASS" class="form-label">Şifre</label>
                    <input asp-for="PASS" type="password" class="form-control form-control-lg" placeholder="Şifrenizi giriniz" />
                </div>
                <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
            </form>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger mt-3">@ViewBag.Error</div>
            }
        </div>
    </div>
</body>
</html>
