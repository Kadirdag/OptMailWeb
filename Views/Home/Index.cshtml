<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <title>Mail Editor</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="~/js/mail.js"></script>
    <style>
        body {
            background: #f4f6f9;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .editor-container {
            display: flex;
            height: 100vh;
        }

        .left-panel {
            width: 75%;
            background: #ffffff;
            border-right: 1px solid #dee2e6;
            padding: 10px;
            box-shadow: 2px 0 8px rgba(0,0,0,0.05);
        }

        .right-panel {
            flex-grow: 1;
            padding: 20px;
            box-shadow: 2px 0 8px rgba(0,0,0,0.05);
            border-right: 1px solid #c1ffff;
            background: #ffffff;
        }

        .toolbar {
            background: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            padding: 8px;
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
            margin-bottom: 10px;
            box-shadow: inset 0 1px 3px rgba(0,0,0,0.05);
        }

            .toolbar button, .toolbar select, .toolbar input[type=color] {
                border: none;
                padding: 6px 10px;
                border-radius: 6px;
                background: #e9ecef;
                transition: all 0.2s ease;
            }

                .toolbar button:hover, .toolbar select:hover, .toolbar input[type=color]:hover {
                    background: #0d6efd;
                    color: #fff;
                }

        .editor {
            border: 1px solid #dee2e6;
            border-radius: 10px;
            min-height: 400px;
            padding: 15px;
            background: #fff;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
            overflow-y: auto;
        }

        .form-select, .form-control, textarea {
            border-radius: 0.5rem;
            border: 1px solid #cde0ff;
            background-color: #ffffff;
            transition: all 0.2s;
        }

            .form-select:hover, .form-control:hover, textarea:hover {
                border-color: #1a73e8;
                box-shadow: 0 0 8px rgba(26, 115, 232, 0.15);
            }

        .modal-content {
            border-radius: 0.75rem;
            background-color: #f8faff;
        }

        .modal-header .modal-title {
            color: #1a73e8;
            font-weight: 600;
        }

        .btn-primary {
            background-color: #1a73e8;
            border-color: #1a73e8;
            transition: 0.2s;
        }

            .btn-primary:hover {
                background-color: #155ab6;
                border-color: #155ab6;
            }

        .toolbar button, .toolbar select, .toolbar input[type="color"] {
            margin: 0 0.2rem 0.2rem 0;
            padding: 0.35rem 0.6rem;
            border-radius: 0.4rem;
            border: 1px solid #cde0ff;
            background-color: #f0f5ff;
            cursor: pointer;
            transition: all 0.2s;
        }

            .toolbar button:hover, .toolbar select:hover, .toolbar input[type="color"]:hover {
                border-color: #1a73e8;
                background-color: #e6f0ff;
            }

        #editor {
            min-height: 200px;
            border: 1px solid #cde0ff;
            border-radius: 0.5rem;
            padding: 0.75rem 1rem;
            background-color: #ffffff;
            overflow-y: auto;
        }

        .editor-container {
            display: flex;
            gap: 1rem; /* Sol ve sağ panel arasına boşluk */
        }

        .left-panel {
            flex: 0 0 800px; /* Sol panel sabit 400px genişlik */
            min-width: 800px; /* Küçülmesini önler */
        }

        .right-panel {
            flex: 1; /* Sağ panel kalan alanı kaplar */
            min-width: 200px; /* İsteğe bağlı minimum genişlik */
            overflow-x: auto; /* İçerik taşarsa yatay kaydırma */
        }
    </style>
</head>
<body>
    <div class="editor-container">
        <!-- Sol Panel -->
        <div class="left-panel">
            <div class="text-start mb-4">
                <h5 class="mb-3">Mail Konusu</h5>
                <input type="text" class="form-control mb-3" placeholder="Mail konusunu giriniz" />
            </div>


            <h5 class="mb-2">Mail İçeriği</h5>

            <!-- Toolbar -->
            <div class="toolbar">
                <!-- Yazı stilleri -->
                <button onclick="execCmd('bold')"><b>B</b></button>
                <button onclick="execCmd('italic')"><i>I</i></button>
                <button onclick="execCmd('underline')"><u>U</u></button>
                <button onclick="execCmd('strikeThrough')"><s>S</s></button>

                <!-- Listeler -->
                <button onclick="execCmd('insertUnorderedList')">• Liste</button>
                <button onclick="execCmd('insertOrderedList')">1. Liste</button>

                <!-- Hizalama -->
                <button onclick="execCmd('justifyLeft')">Sol</button>
                <button onclick="execCmd('justifyCenter')">Orta</button>
                <button onclick="execCmd('justifyRight')">Sağ</button>
                <button onclick="execCmd('justifyFull')">Tam</button>

                <!-- Bloklar -->
                <button onclick="execCmd('formatBlock','<blockquote>')">“ Alıntı</button>
                <button onclick="insertCode()">&lt;/&gt; Kod</button>

                <!-- Yazı boyutu -->
                <select onchange="execCmd('fontSize', this.value)">
                    <option value="3">Normal</option>
                    <option value="1">Küçük</option>
                    <option value="5">Büyük</option>
                    <option value="7">Çok Büyük</option>
                </select>

                <!-- Renk -->
                <input type="color" onchange="execCmd('foreColor', this.value)" title="Yazı Rengi" />

                <!-- Link -->
                <button onclick="insertLink()">🔗 Link</button>

                <!-- Resim -->
                <button onclick="document.getElementById('imageUpload').click()">🖼️ Resim</button>
                <input type="file" id="imageUpload" accept="image/*" style="display:none" onchange="insertImage(event)" />

                <!-- Tablo -->
                <button onclick="insertTable()">📊 Tablo</button>
            </div>

            <!-- Editör -->
            <div id="editor" class="editor" contenteditable="true"></div>
        </div>

        <!-- Sağ Panel -->
        <div class="right-panel">
            <!-- Yeni Kullanıcı Modal -->
            <div class="modal fade" id="mailKullaniciModal" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="modalYeniKullaniciLabel">Yeni Kullanıcı Ekle</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
                        </div>
                        <div class="modal-body">
                            <form id="formYeniKullanici">
                                <div class="row mb-2">
                                    <div class="col">
                                        <label>Bölüm</label>
                                        <select id="BolumId" name="BolumId" class="form-select"></select>
                                    </div>
                                    <div class="col">
                                        <label>Aracı Kurum</label>
                                        <select id="AraciKurumId" name="AraciKurumId" class="form-select"></select>
                                    </div>
                                    <div class="col">
                                        <label>Birim</label>
                                        <select id="BirimId" name="BirimId" class="form-select"></select>
                                    </div>
                                </div>
                                <div class="mb-2">
                                    <label>Ad Soyad</label>
                                    <input type="text" id="AdSoyad" class="form-control" />
                                </div>
                                <div class="mb-2">
                                    <label>Telefon</label>
                                    <input type="text" id="Telefon" class="form-control" />
                                </div>
                                <div class="mb-2">
                                    <label>Mail</label>
                                    <input type="email" id="Mail" class="form-control" />
                                </div>
                                <div class="mb-2">
                                    <label>Adres</label>
                                    <input type="text" id="Adres" class="form-control" />
                                </div>
                                <div class="mb-2">
                                    <label>Notlar</label>
                                    <textarea id="Notlar" class="form-control"></textarea>
                                </div>
                                <div class="form-check mb-2">
                                    <input type="checkbox" class="form-check-input" id="Aktif" checked>
                                    <label class="form-check-label" for="Aktif">Aktif</label>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                            <button type="button" class="btn btn-primary" id="btnKaydetKullanici">Kaydet</button>
                        </div>
                    </div>
                </div>
            </div>
            @await Html.PartialAsync("RightPanel")
        </div>
    </div>

    <script>
        function execCmd(command, value = null) {
            document.execCommand(command, false, value);
        }

        function insertCode() {
            let selection = document.getSelection().toString();
            if (selection) {
                document.execCommand("insertHTML", false, "<code style='background:#f1f1f1;padding:2px 4px;border-radius:4px;'>" + selection + "</code>");
            }
        }

        function insertLink() {
            const url = prompt("Link girin:");
            if (url) {
                document.execCommand("createLink", false, url);
            }
        }

        function insertImage(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    document.execCommand("insertImage", false, e.target.result);
                };
                reader.readAsDataURL(file);
            }
        }

        function insertTable() {
            const rows = prompt("Kaç satır?");
            const cols = prompt("Kaç sütun?");
            if (rows > 0 && cols > 0) {
                let table = "<table border='1' style='border-collapse:collapse;width:100%;'>";
                for (let i = 0; i < rows; i++) {
                    table += "<tr>";
                    for (let j = 0; j < cols; j++) {
                        table += "<td style='padding:5px;'>Hücre</td>";
                    }
                    table += "</tr>";
                }
                table += "</table>";
                document.execCommand("insertHTML", false, table);
            }
        }


        $(document).ready(function () {

            // Modal açılınca comboları doldur
            $("#btnYeniKullanici").click(function () {
                $("#mailKullaniciModal").modal("show");

                // Comboları doldur
                loadBolumler();
                loadAraciKurumlar();

                // Modal açıldığında tüm birimler (boş filtreyle) gelsin
                loadBirimler(0, 0, 0);
            });

            // Bölüm veya Aracı Kurum değiştiğinde birimleri filtrele
           

            // Bölüm, Kurum veya Aracı Kurum değiştiğinde filtrele
            $("#BolumId, #AraciKurumId").change(function () {
                const bolumId = parseInt($("#BolumId").val()) || 0;
                const araciKurumId = parseInt($("#AraciKurumId").val()) || 0;

                // KurumId, eğer ana kurum seçimi varsa ayrı bir select ise onun değeri alınabilir.
                const kurumId = 0; // burayı ihtiyaç varsa ayrı select ile al

                loadBirimler(bolumId, kurumId, araciKurumId);
            });



            // Kaydet butonu AJAX
            $("#btnKaydetKullanici").click(function () {
                const data = {
                    BolumId: $("#BolumId").val(),
                    KurumId: $("#BirimId").val(), // Burada doğru dropdown ID kullanıyoruz
                    AraciKurumId: $("#AraciKurumId").val(),
                    AdSoyad: $("#AdSoyad").val(),
                    Telefon: $("#Telefon").val(),
                    Mail: $("#Mail").val(),
                    Adres: $("#Adres").val(),
                    Notlar: $("#Notlar").val(),
                    Aktif: $("#Aktif").is(":checked")
                };

                $.ajax({
                    url: '/Mail/Kaydet',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(data),
                    success: function (res) {
                        alert(res.message);
                        if (res.success) {
                            $("#mailKullaniciModal").modal("hide");
                            location.reload(); // ekranı yeniler
                        }
                    }
                });
            });

        });



        function loadBolumler() {
            return $.getJSON('/Mail/GetBolumler')
                .done(function (data) {
                    const $sel = $("#BolumId");
                    $sel.empty().append('<option value="">Seçiniz</option>');
                    data.forEach(item => {
                        const id = item.id ?? item.Id;
                        const name = item.name ?? item.Name ?? item.Ad; // Name bekleniyor ama her ihtimale karşı
                        $sel.append(`<option value="${id}">${name}</option>`);
                    });
                })
                .fail(function (xhr) {
                    console.error('GetBolumler FAIL', xhr.status, xhr.responseText);
                });
        }

        // Aracı Kurum (endpoint DÜZELTİLDİ!)
        function loadAraciKurumlar() {
            return $.getJSON('/Mail/GetAraciKurumlar')
                .done(function (data) {
                    const $sel = $("#AraciKurumId");
                    $sel.empty().append('<option value="">Seçiniz</option>');
                    data.forEach(item => {
                        const id = item.id ?? item.Id;
                        const name = item.name ?? item.Name ?? item.Ad;
                        $sel.append(`<option value="${id}">${name}</option>`);
                    });
                })
                .fail(function (xhr) {
                    console.error('GetAraciKurumlar FAIL', xhr.status, xhr.responseText);
                });
        }

        function loadBirimler(bolumId, kurumId, araciKurumId) {
            $.get("/Mail/GetBirimler", {
                bolumId: bolumId,
                kurumId: kurumId || 0,
                araciKurumId: araciKurumId || 0
            }, function (data) {
                const select = $("#BirimId");
                select.empty();
                select.append('<option value="0">Seçiniz</option>');
                $.each(data, function (i, item) {
                    select.append('<option value="' + item.id + '">' + item.name + '</option>');
                });
            });
        }





        function fillSelect($sel, items, textProp = 'Name', valProp = 'Id') {
            $sel.empty().append('<option value="">Seçiniz</option>');
            if (!items || !items.length) return;
            items.forEach(it => {
                const txt = it[textProp] ?? it.Ad ?? it.name ?? it.Name ?? '';
                const val = it[valProp] ?? it.Id ?? it.id ?? '';
                $sel.append(`<option value="${val}">${txt}</option>`);
            });
        }








        // Modal açılınca doldur + change event'leri
        $(document).ready(function () {
            // Modal Bootstrap id'in: mailKullaniciModal (senin HTML’de bu)
            $('#mailKullaniciModal').on('shown.bs.modal', function () {
                // Sırayla yükle; hatayı görmen için fail logları da var
                loadBolumler();
                loadAraciKurumlar();
                loadBirimler();
                // İlk açılışta "Seçiniz" göstermek için birimleri sadece placeholder ile bırakıyoruz.
                // Kullanıcı seçim yapınca doldurulacak.
            });

            // Bölüm veya Aracı Kurum değiştiğinde birimleri yükle
            $("#BolumId, #AraciKurumId").on('change', loadBirimler);
        });

        $(document).ready(function () {
            // Modal açıldığında dropdownları doldur
            $("#btnYeniKullanici").click(function () {
                $("#mailKullaniciModal").modal("show");

                loadBolumler();
                loadAraciKurumlar();
                loadBirimler();; // ilk başta da birimleri doldur
            });

            // Bölüm veya Aracı Kurum değişirse birimleri yeniden yükle
            $("#BolumId, #AraciKurumId, #KurumId").change(function () {
                const bolumId = $("#BolumId").val() || 0;
                const kurumId = $("#KurumId").val() || 0;
                const araciKurumId = $("#AraciKurumId").val() || 0;

                loadBirimler({ bolumId, kurumId, araciKurumId }, $("#BirimId"));
            });

        });




        function getMailData() {
            return {
                subject: document.querySelector("input[placeholder='Mail konusunu giriniz']").value.trim(),
                body: document.querySelector("#editor").innerHTML.trim()
            };
        }



    </script>
</body>
</html>
